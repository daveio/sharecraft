{
  "name": "sharecraft",
  "version": "1.0.0",
  "description": "Sharecraft - A Cloudflare Worker for creating social media previews for blog posts",
  "main": "src/index.ts",
  "scripts": {
    "bundle": "bun run scripts/bundle.ts",
    "build": "bun run scripts/build.ts",
    "dev": "bun run scripts/dev.ts",
    "deploy": "bun run scripts/deploy.ts",
    "check:typescript": "bun run tsc --noEmit",
    "format": "bun run biome format . --write",
    "lint": "bun run biome lint .",
    "types": "bun run wrangler types",
    "test": "bun run vitest"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "handlebars": "^4.7.8",
    "hono": "^4.7.8",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "vitest": "~3.1.2",
    "@cloudflare/vitest-pool-workers": "^0.8.22",
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20250429.0",
    "@types/bun": "^1.2.11",
    "typescript": "^5.8.3",
    "wrangler": "^4.13.2"
  },
  "packageManager": "bun@1.2.10",
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp", "workerd"]
}
