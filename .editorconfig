# syntax: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
ij_continuation_indent_size = 2
ij_smart_tabs = true
ij_wrap_on_typing = false
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true


[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[{Dockerfile,*.{fish,py,rs}}]
tab_width = 4
indent_size = 4
ij_continuation_indent_size = 4
